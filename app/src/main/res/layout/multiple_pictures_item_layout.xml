<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <include
        layout="@layout/head_icon_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <include
            android:id="@+id/content_box_item"
            layout="@layout/content_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/img_box_more_pictures_item"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/content_box_item">

            <ImageView
                android:id="@+id/iv_picture1_more_pictures_item"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:src="@drawable/img11" />

            <ImageView
                android:id="@+id/iv_picture2_more_pictures_item"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:src="@drawable/img11" />

            <ImageView
                android:id="@+id/iv_picture3_more_pictures_item"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:src="@drawable/img11" />

        </LinearLayout>

        <include
            layout="@layout/bottom_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_box_more_pictures_item"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

</LinearLayout>